# overwritten on the next run.
# ---------------------------------------------------------

# Bloquer phpinfo (fichier, script, ou répertoire)

location ~* /[._-]*phpinfo([._-]*php)?(/|$) {
    deny all;
}

# Bloquer phpMyAdmin et ses alias (phpmyadmin, pma)

location ~* /(phpmyadmin|pma)([._-]*php)?(/|$) {
    deny all;
}

# Bloquer Adminer (outil de gestion PHP)

location ~* /adminer([._-]*php)?(/|$) {
    deny all;
}

# Bloquer les outils de développement PHP courants

location ~* /(phpunit|phpspec|behat|codeception|php-cs-fixer)([._-]*php)?(/|$) {
    deny all;
}